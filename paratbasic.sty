	\setlength{\tlogowidth}{\headerwidth}
	\setlength{\tpagemargin}{\textheight/10}
	\setlength{\abstractwidth}{\linewidth/10*8}
}

\newcommand{\biglogost}{%
	\includegraphics[width=\tlogowidth]{\paratlogost}
}

\newcommand{\smalllogost}{%
	\includegraphics[height=\hlogoheight]{\paratlogost}%
}

\newcommand{\headerlogo}{%
	\smalllogost%
	\vspace{\hlogospace}%
}

\newcommand{\logonamebox}[1]{%
    \scalebox{#1}{%
	\parbox{\headerwidth}{%
	\biglogost\par
	\Large\headername}}
}

